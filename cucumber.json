{
    "default":{
        "paths": [ "tests/features" ],
        "formatOption": {
            "snippetInterface": "async-await"
        },
        "require": [ 
            "tests/steps/*.ts",
            "tests/hooks/hooks.ts"
        ],
        "requireModule": [ "ts-node/register" ],
        "format": [
            "html:test-result/report/cucumber-report.html",
            "json:test-result/report/cucumber-report.json", 
            "rerun:@rerun.txt"
        ],
        "parallel": 2,
        "retry": 1
    },
    "rerun":{
        "formatOption": {
            "snippetInterface": "async-await"
        },
        "require": [ 
            "tests/steps/*.ts",
            "tests/hooks/hooks.ts"
        ],
        "requireModule": [ "ts-node/register" ],
        "format": [
            "html:test-result/report/cucumber-report.html",
            "json:test-result/report/cucumber-report.json", 
            "rerun:@rerun.txt"
        ],
        "parallel": 2
    }
}